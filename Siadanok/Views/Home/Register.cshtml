@using DataBase.Entity
@model User
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Регистрация";
}

<main class="form-signin">
<form action="/Home/Register" method="post" enctype="multipart/form-data">

        </br>
        <h1 class="h3 mb-3 fw-normal">Пожалуйста, зарегистрируйтесь</h1>
        <hr class="my-4">

        <div class="form-floating">
            <input asp-for="Number" type="text" class="form-control" id="floatingInput" placeholder="+37529xxxyyzz">
            <label asp-for="Number" for="floatingInput">Номер телефона</label>
            <span class="badge bg-danger" asp-validation-for="Number"></span>
        </div>
        </br>
        <div class="form-floating">
            <input asp-for="Password" type="text"class="form-control" id="floatingInput" placeholder="+37529xxxyyzz">
            <label asp-for="Password" for="floatingInput">Пароль</label>
            <span class="badge bg-danger" asp-validation-for="Password"></span>
        </div>
        </br>
        <div class="form-floating">
            <input asp-for="FirstName" type="text" class="form-control" id="floatingInput" placeholder="+37529xxxyyzz">
            <label asp-for="FirstName" for="floatingInput">Имя</label>
            <span class="badge bg-danger" asp-validation-for="FirstName"></span>
        </div>
        </br>
        <div class="form-floating">
            <input asp-for="SecondName" type="text" class="form-control" id="floatingInput" placeholder="+37529xxxyyzz">
            <label asp-for="SecondName" for="floatingInput">Фамилия</label>
            <span class="badge bg-danger" asp-validation-for="SecondName"></span>
        </div>
        </br>
        <div class="form-group">
            <label for="formFile" class="form-label mt-4">Картинка</label>
            <input class="form-control" type="file" name="Picture" id="formFile">
        </div>
        </br>
        <button class="w-100 btn btn-lg btn-primary" type="submit">Регистрация</button>
        </form>
</main>